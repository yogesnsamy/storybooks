<h1>Search</h1>
<div class="row">
  <form action="/rfps" method="post" class="col s12">
    <div class="row">
      <div class="input-field">
        <input type="text" name="question">
        <label for="title">Question</label>
      </div>
    </div>
    <input type="submit" value="Search" class="btn">
  </form>
</div>

<br>
<div>
  <h4><strong>{{title}}</strong></h4>
  <p>{{data.matching_results}} matching documents found</p>
  {{#each data.results}}
  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{{highlight.question}}}</span>
          <p>{{{highlight.answer}}}</p>
        </div>
        <div class="card-action">
          <a href="/rfps/show/{{document_id}}">Read More</a>
          <button id="myBtn">Copy</button>
          <p id="demo"></p>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>